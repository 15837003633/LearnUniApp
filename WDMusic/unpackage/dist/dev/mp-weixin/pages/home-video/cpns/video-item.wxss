.item {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;
}
.item .album {
  position: relative;
  overflow: hidden;
  color: white;
}
.item .album .cover {
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}
.item .album .info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx 10rpx;
}
